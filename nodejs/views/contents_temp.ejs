<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="http://localhost:3000/mybootstrap.css">

    <title><%= title%></title>

    <link rel="shortcut icon" href="http://localhost:3000/image/red-maru.png">

    <link rel="stylesheet" type="text/css" href="http://localhost:3000/design.css">
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
    <style>

      /* ホームコンテンツのスタイル */
      #add{
        background-color:#FFF;
      }
      #contents{
        border-top: solid;
        border-color: #a3a3a3;
        display: flex;
        padding: 8px;   
        position: relative;              
      }
      #icon{
        margin-right: 4px;
      }
      #icon a img{
        width:40px;
        height: 40px;
        margin: 5px;
      }
      #href a{
        color: black;
      }
      #href a span{
        font-weight: bold;
        font-size: 1.1em;
      }
      #time{             
        margin-right: 8px;
        right: 0;
        bottom: 0;
        position: absolute;

      }
      #href div{
        display: flex;
      }
      #href2 ul li a:hover{
        text-decoration: none;
      }
      #more{
        cursor: pointer;
        color: gray;
      }

      /* 検索テキスト周り */
      #form02{
        background-color: #FFF;
        width:270px;
        height: 30px;
        border: 2px grey solid;
        padding: 0;
        margin: 0;
        border-radius: 10px;
      }
      #form02:hover{

        background-color: #f7fff9

      }
      #form02 input{
        vertical-align: top;
        margin: 0px;
        height: 100%;
        box-sizing: border-box;
        background-color: transparent;
      }
      #form02 input[type="text"]{
        margin-left: 5px;
        width:230px;
        height: 25px;
        border: none;
        caret-color: #a3a3a3;
      }
      #form02 input:focus{
        outline: none;
      }
      #form02 input[type="button"]{
        width: 30px;
        border: none;
        background-image: url(image/images.png);
        background-position: center;
        background-size: auto 90%;
        background-repeat: no-repeat;
        cursor: pointer
      }

      .body{
        background-color: #FFFF;
        line-height: 2em;
        padding: 2em;
        margin-top: 3em;
        margin-bottom: 2em;
      }
      .body h1, .body h2, .body h3, .body h4{
        padding-left: 0.2em;
        margin-top: 1.2em;
        margin-bottom: 1.15em;
        border-bottom: solid;
        border-top-color:rgb(165, 164, 164);
        border-bottom-color: rgb(165, 164, 164);
      }


    </style>
    
  </head>
  <body>

    <!-- タイトル -->
    <div class="mask">
    <h1 id='head'>ＴＥＳＴ</h1>
    <div>
      <%- loginStatus %>
    </div>
    </div>

    <div class="container">

        <div class="row">
          
          <div class="col-sm-12">

                <div class="body">
                    <h1 class='ti' style='margin:0;font-weight:bold;line-height:1.3em;'><%= title %></h1>
                    <%- meta %>
                    
                    <%- main %>
                </div>
          </div>   

    </div>
    
    <script>
        $('#head').on('click',function(){
        window.location.href = "http://localhost:3000/";
    })
    </script>
</body>
</html>