    <style>
      /* ホームコンテンツのスタイル */
      #add{
        background-color:#FFF;
      }
      #contents{
        border-top: solid;
        border-color: #a3a3a3;
        display: flex;
        padding: 8px;   
        position: relative;              
      }
      #icon{
        margin-right: 4px;
      }
      #icon a img{
        width:40px;
        height: 40px;
        margin: 5px;
      }
      #href a{
        color: black;
      }
      #href a span{
        font-weight: bold;
        font-size: 1.1em;
      }
      #time{             
        margin-right: 8px;
        right: 0;
        bottom: 0;
        position: absolute;
      }
      #href div{
        display: flex;
      }
      #href2 ul li a:hover{
        text-decoration: none;
      }
      #more{
        cursor: pointer;
        color: gray;
      }
      /* 検索テキスト周り */
      #form02{
        background-color: #FFF;
        width:270px;
        height: 30px;
        border: 2px grey solid;
        padding: 0;
        margin: 0;
        border-radius: 10px;
      }
      #form02:hover{
        background-color: #f7fff9
      }
      #form02 input{
        vertical-align: top;
        margin: 0px;
        height: 100%;
        box-sizing: border-box;
        background-color: transparent;
      }
      #form02 input[type="text"]{
        margin-left: 5px;
        width:230px;
        height: 25px;
        border: none;
        caret-color: #a3a3a3;
      }
      #form02 input:focus{
        outline: none;
      }
      #form02 input[type="button"]{
        width: 30px;
        border: none;
        background-image: url(image/images.png);
        background-position: center;
        background-size: auto 90%;
        background-repeat: no-repeat;
        cursor: pointer
      }
 
    </style>
    

